<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.admin.uscore001">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.AppIntroActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.login_activity"
            android:theme="@style/ActivityNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.LOGIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.dashboard_activity"
            android:theme="@style/ActivityNoActionBar"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.DASHBOARD" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.register_activity">
            <intent-filter>
                <action android:name="android.intent.action.RegisterActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".activities.StudentRegisterRequestActivity">
            <intent-filter>
                <action android:name="android.intent.action.StudentRegisterRequestActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".activities.TopScore_Activity"
            android:theme="@style/ActivityNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.TOPSCORE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.QRCODE_activity">
            <intent-filter>
                <action android:name="android.intent.action.QRCODE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.StudentProfile_activity2"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.STUDENT2" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.StudentDetailPage">
            <intent-filter>
                <action android:name="android.intent.action.StudentDetailPage" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.CommentsPage"
            android:theme="@style/ActivityNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.CommentPage" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.TeacherProfile">
            <intent-filter>
                <action android:name="android.intent.action.TeacherProfile" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.RecentActionsPage"
            android:theme="@style/ActivityNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.RECENTACTIONS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.RequestDetailView"
            android:theme="@style/ActivityNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.RequestDetail" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

