<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/circleImageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:src="@drawable/app_image2"
            android:layout_width="80dp"
            android:layout_margin="10dp"
            app:civ_border_overlay="true"
            app:civ_border_color="#BEBEBE"
            app:civ_border_width="0.5dp"
            android:layout_height="80dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_toRightOf="@id/circleImageLayout"
        android:id="@+id/senderTopLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:text="Willam Show"
            android:id="@+id/senderUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18dp"
            android:textColor="#808080"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/senderUsername"
            android:layout_marginStart="15dp"
            android:text="31.12.2018"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bodyLayout"
        android:layout_toRightOf="@id/circleImageLayout"
        android:layout_below="@id/senderTopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/body"
            android:layout_margin="10dp"
            android:textColor="#404040"
            android:text="SOME COMMENT HERE I LOVE COUNTRYSIDE BROTHER DO U LIKE THAT?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/bodyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginStart="100dp"
            android:text="Reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginStart="200dp"
            android:layout_centerVertical="true"
            android:id="@+id/likeImageView"
            android:src="@drawable/heart"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:layout_marginStart="250dp"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:text="15"
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>