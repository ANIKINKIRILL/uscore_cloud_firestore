<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/cardViewLayout"
            android:padding="20dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/userRating"
                android:layout_weight="15"
                tools:text="12"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userAvatar"
                android:layout_weight="20"
                android:layout_gravity="center"
                android:gravity="center"
                tools:src="@drawable/app_image"
                android:layout_width="0dp"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_weight="45"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/username"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    tools:text="Rinat Farkhutdinov"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/userGroup"
                    android:textSize="15sp"
                    tools:text="10-6"
                    android:textColor="@color/groupCardViewColor"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/userScore"
                android:layout_weight="20"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/startblue_transparent"
                android:gravity="center"
                tools:text="2500"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:id="@+id/dividerLine"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/cardViewLayout"
            android:background="#B1AEAE" />


    </RelativeLayout>

</android.support.v7.widget.CardView>