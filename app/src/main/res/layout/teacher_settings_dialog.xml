<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/firstNameLayout"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_weight="70"
            android:text="Имя: "
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />
        <EditText
            android:id="@+id/firstName"
            android:gravity="center"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint=""
            android:layout_weight="30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondNameLayout"
        android:layout_below="@id/firstNameLayout"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_weight="70"
            android:text="Фамилия: "
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />
        <EditText
            android:id="@+id/secondName"
            android:gravity="center"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint=""
            android:layout_weight="30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/secondNameLayout"
        android:id="@+id/lastNameLayout"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_weight="70"
            android:text="Отчество: "
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />
        <EditText
            android:id="@+id/lastName"
            android:gravity="center"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint=""
            android:layout_weight="30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/lastNameLayout"
        android:id="@+id/positionLayout"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_weight="70"
            android:text="Должность: "
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />
        <EditText
            android:id="@+id/position"
            android:gravity="center"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="Учитель Русского Языка"
            android:layout_weight="30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/positionLayout"
        android:id="@+id/subjectLayout"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_weight="70"
            android:text="Предметы: "
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />
        <EditText
            android:id="@+id/subject"
            android:gravity="center"
            android:hint="Русский Язык"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_weight="30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/subjectLayout"
        android:id="@+id/buttonsLayout"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:gravity="center"
        android:layout_weight="50"
        android:padding="10dp"
        android:textColor="@color/startblue_transparent"
        android:id="@+id/ok"
        android:layout_margin="10dp"
        android:text="@string/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:layout_weight="50"
        android:padding="10dp"
        android:textColor="@color/startblue_transparent"
        android:id="@+id/cancel"
        android:layout_margin="10dp"
        android:text="@string/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>